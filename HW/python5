with open('text.txt', 'r', encoding='utf-8') as f:
    lines = f.readlines()
    numlin = 0
    wordstotal = 0
    for line in lines:
        numlin += 1
        a = line.split(' ')
        for s in a:
            words = 0
            words += 1
            wordstotal += words

    x = 0
    x = wordstotal/numlin
    print('Среднее количество слов в строке: ',x)
